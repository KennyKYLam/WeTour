<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="San Francisco Trip" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Trip"
        android:paddingBottom="10dip"
        android:textStyle="bold"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/Trip"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:text="Points of Interests" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textStyle="bold"
        android:id="@+id/ptofinterest0" android:layout_below="@+id/map" android:paddingTop="10dip"
        />

    <TextView android:text="1. Mission Dolores" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/ptofinterest0"
        android:id="@+id/ptofinterest1"  android:paddingTop="10dip"
        />
    <TextView android:text="2. Moscone Convention Center" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptofinterest2" android:layout_below="@+id/ptofinterest1" android:paddingTop="10dip"
        />
    <TextView android:text="3. Presidio Army Museum" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptofinterest3" android:layout_below="@+id/ptofinterest2" android:paddingTop="10dip"
        />

</RelativeLayout>

